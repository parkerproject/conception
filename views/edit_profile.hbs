<form id="artist-edit-form">
  <div class="row artist-profile edit-artist-profile">
      <div class="artist-details large-6 small-12 columns">
          <img src="/images/artist.jpg" alt="" class="artist-pic" />
          <a class="edit-photo">Edit Photo</a>
          <h4>My Story</h4>
          <p>
              <textarea name="my_story">Bacon ipsum dolor sit amet tri-tip bresaola ribeye, meatball spare ribs chicken shoulder short ribs meatloaf. Beef ribs spare ribs shank, corned beef kielbasa prosciutto ham leberkas pork chop ball tip t-bone ham hock. Hamburger pastrami salami flank </textarea>

          </p>

      </div>
<div class="artist-details large-6 small-12 columns">
    <div class="row">
    <input name="artist_name" type="text" placeholder="Name" class="text large-6 columns" />
    </div>

    <div class="row">
    <input name="artist_email" type="text" placeholder="Email" class="text large-6 columns" />
    </div>

    <div class="row">
    <input name="artist_phone" type="text" placeholder="Phone" class="text large-6 columns" />
    </div>

    <div class="row">
        <div class="large-6 small-12">
            <h5>Genres:</h5>
             <select name="genre" class="genre" required>
                <option value="">Select genre of art</option>
                <option value="artist">Artist</option>
                <option value="photography">Photography</option>
                <option value="design">Design</option>
                <option value="performaning art">Performing Art</option>
                <option value="dance">Dance</option>
                <option value="music">Music</option>
                <option value="other">Other</option>
             </select>
      </div>
    </div>

      <div class="row collapse">
        <div class="small-3 large-2 columns">
          <span class="prefix artist-social-prefix">http://</span>
        </div>
        <div class="small-9 large-10 columns">
          <input type="text" placeholder="Enter your URL...">
        </div>
      </div>

       <div class="row collapse">
        <div class="small-3 large-2 columns">
          <span class="prefix artist-social-prefix"><i class="icon-facebook"></i></span>
        </div>
        <div class="small-9 large-10 columns">
          <input type="text" placeholder="Enter your Facebook URL...">
        </div>
      </div>

     <div class="row collapse">
        <div class="small-3 large-2 columns">
          <span class="prefix artist-social-prefix"><i class="icon-twitter"></i></span>
        </div>
        <div class="small-9 large-10 columns">
          <input type="text" placeholder="Enter your Twiiter URL...">
        </div>
      </div>

      <div class="row collapse">
        <div class="small-3 large-2 columns">
          <span class="prefix artist-social-prefix"><i class="icon-instagram"></i></span>
        </div>
        <div class="small-9 large-10 columns">
          <input type="text" placeholder="Enter your Instagram URL...">
        </div>
      </div>

      <div class="row">
          <div class="large-12 columns art-thumb">
              <img src="/images/profile-thumb.jpg" alt="" />
              <img src="/images/profile-thumb.jpg" alt="" />
              <img src="/images/profile-thumb.jpg" alt=""/ >
            <span class="file right">
              <input type="file" name="file" />
            </span>
          </div>
      </div>

  </div>

</div>

<div class="row">
<button class="large-11 columns" type="submit">Submit</button>
<button class="large-1 columns cancel" type="submit"><i class="icon-x-circle"></i></button>
