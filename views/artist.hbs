<!doctype html>
<html class="no-js" lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Conception - emerging artists</title>
  <link rel="stylesheet" href="/themify-icons.css">
  <link rel="stylesheet" href="/css/fonts.css">
  <link rel="stylesheet" href="/css/app.css" />
  <script src="/vendor/modernizr/modernizr.js"></script>
</head>

<body>
<div class="top-header-bar">
    <div class="row">
      <a href="/" class="large-7 columns logo">conception events</a>
      <a href="/artist/login" class="large-1 columns login">Login</a>
      <div class="large-4 columns">
        <a href="/register">
            <button class="small-12"><span class="ti-plus"></span>
          <span class="text">join the experience<i>submit today!</i></span>
        </button>
        </a>
      </div>
    </div>
  </div>




  <div class="row">
    <div class="large-12 columns clearfix">
      <nav class="top-bar" data-topbar>
        <ul class="title-area">
          <li class="name">
            <!-- <h1><a href="#">My Site</a></h1> -->
          </li>
          <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
          <li class="toggle-topbar menu-icon"><a href="#"><span></span></a>
          </li>
        </ul>

        <section class="top-bar-section">
          <!-- Left Nav Section -->
          <ul class="left">
            <li class="events"><a href="/events">events</a></li>
            <li class="about_us"><a href="/about">about us</a></li>
            <li class="press"><a href="/press">press</a></li>
            <li class="gallery"><a href="/gallery">gallery</a></li>
            <li class="campus"><a href="/campus">campus</a></li>
            <li class="whats_new"><a href="/what-new">what's new</a></li>
          </ul>
        </section>
      </nav>
    </div>
  </div>

  <div class="row artist-profile">
      <div class="large-4 columns">
          <img src="/artists_images/{{data.photo}}" alt="" class="artist-pic">
          <div class="artist-details">
              <span class="name">{{data.full_name}}</span>
              <span class="category">{{data.genre}}</span>

						{{#if data.story}}
              <h4>my story</h4>
              <p>{{data.story}}</p>
						{{/if}}

              <ul class="inline-list artist-social">
								{{#if data.facebook_url}}
                  <li><a href="{{data.facebook_url}}" class="icon-facebook"><!--facebook--></a></li>
								{{/if}}
								{{#if data.twitter_url}}
                  <li><a href="{{data.twitter_url}}" class="icon-twitter"><!-- twitter --></a></li>
								{{/if}}
								{{#if data.instagram}}
                  <li><a href="{{data.instagram}}" class="icon-instagram"><!-- instagram --></a></li>
								{{/if}}
<!--                   <li><a href="" class="icon-gplus">googleplus</a></li> -->
              </ul>
              {{#if data.url}}
              <a href="http://{{data.url}}" class="artist-url"><i class="icon-link-streamline"></i>{{data.url}}</a>
						  {{/if}}
              <button><i class="icon-ticket"></i>BUY TICKETS<span>To see this artist!</span></button>
          </div>

      </div>
      <div class="large-8 columns">

				<ul class="mygallery clearing-thumbs small-block-grid-4" data-clearing>
					{{#if data.artwork_1}}
					<li><a href="/artists_images/{{data.artwork_1}}"><img src="/artists_images/{{data.artwork_1}}"></a></li>
					{{/if}}
					{{#if data.artwork_2}}
					<li><a href="/artists_images/{{data.artwork_2}}"><img src="/artists_images/{{data.artwork_2}}"></a></li>
					{{/if}}
					{{#if data.artwork_3}}
					<li><a href="/artists_images/{{data.artwork_3}}"><img src="/artists_images/{{data.artwork_3}}"></a></li>
					{{/if}}
				</ul>
      </div>
  </div>


  <div class="row">
    <div class="large-12 columns">
      <span class="scrollup"><i class="icon-angle-double-up"></i>Scroll up</span>
    </div>
  </div>

  <div class="row">
    <div class="large-12 colums">
      <ul class="inline-list footer-social">
        <li>
          <a href="https://www.facebook.com/ConceptionEvents" class="icon-facebook-circled"></a>
        </li>
        <li>
          <a href="https://twitter.com/ConceptionNYC" class="icon-twitter-circled"></a>
        </li>
        <!--               <li><a href="#" class="icon-social-pinterest"></a></li>
              <li><a href="#" class="icon-gplus-circled"></a></li> -->
      </ul>
    </div>
  </div>

  <div class="row">
    <large-12 class="cloumns copyright">
      <p class="text-center">Copyright &copy; 2014 Conception</p>
    </large-12>
  </div>

    <script src="/vendor/jquery/dist/jquery.min.js"></script>
  <script src="/vendor/foundation/js/foundation.min.js"></script>
	<script src="/vendor/foundation/js/foundation/foundation.clearing.js"></script>
  <script src="/vendor/slick-carousel/slick/slick.js"></script>
   <script src="/js/jquery.validate.js"></script>
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.7.0/moment.min.js"></script>

  <script src="/js/main.js"></script>

     <script>
    $(document).foundation();
  </script>

</body>

</html>
