      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
					<h1>{{full_name}}</h1>
					<p>
						 <strong>Profile: <a target="_blank" href="http://www.conceptionarts.com/artist/{{user_token}}">http://www.conceptionarts.com/artist/{{user_token}}</a></strong>
					<button onclick="goBack()" class="btn btn-success pull-right">&lt;&lt; Go Back</button>
					</p>

         <p><img src="https://artistworks.s3-us-west-2.amazonaws.com/artists_images/{{photo}}" class="img-responsive" width="200"></p>

					<p>Genre: {{genre}}</p>

					<p>Artist login info: <i style="background-color: yellow">{{email}}</i> // <i style="background-color: yellow">{{pass}}</i></p>

        </section>

        <!-- Main content -->
        <section class="content">

					<div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Manage Artist</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" action="/admin/event/artist" method="post">
									<input type="hidden" value="{{user_token}}" name="user_token" />
									<input type="hidden" value="{{event}}" name="event_id" />
                  <div class="box-body">
                   <div style="font-size: 15px;">Tickets sold: <span class="badge {{badge}}">{{tix_sold}}</span></div>

										<div class="form-group">
											<div class="radio">
                        <label>
                          <input type="radio" name="status" id="optionsRadios2" value="approve" {{check}}>Approve</label>
                      </div>
                      <div class="radio">
                        <label>
                          <input type="radio" name="status" id="optionsRadios1" value="unapprove" {{uncheck}}>Unapprove</label>
                      </div>
                    </div>

										<div class="form-group">
                      <label for="booker">Booker</label>
                      <input type="text" class="form-control" placeholder="Booker" name="booker" value="{{booker}}">
                    </div>

									   <div class="form-group">
                      <label for="status_1">Status 1</label>
                      <input type="text" class="form-control" placeholder="status 1" name="status_1" value="{{status_1}}">
                    </div>

									   <div class="form-group">
                      <label for="status_2">Status 2</label>
                      <input type="text" class="form-control" placeholder="status 2" name="status_2" value="{{status_2}}">
                    </div>


										<div class="form-group">
                      <label>Notes</label>
                      <textarea class="form-control" rows="3" placeholder="Enter notes ..." name="notes">{{notes}}</textarea>
                    </div>


                  </div><!-- /.box-body -->

                  <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>


        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->

